    <!-- Custom CSS -->
    <style>
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
        }
        /* Set background color and font family */
        body {
            font-family: 'Open Sans', sans-serif;
        }

        /* Style for card-box */
        .card-box {
            width: 400px;
            height: 200px;
            border-radius: 10px;
            padding: 20px;
            margin-top: 20px;
            margin-bottom: 60px;
            background-color: #577590;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
            position: relative;
        }

        /* Style for card-exp-cvv-box */
        .card-exp-cvv-box {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .expiry {
            flex: 60%;
        }

        .cvv {
            flex: 40%;
        }

        /* Style for card title */
        .card-title {
            font-size: 24px;
            font-weight: bold;
            margin-top: 5px;
            margin-bottom: 20px;
        }

        /* Style for card content */
        .card-heading-text {
            font-size: 12px;
            color: #000000;
            margin-top: 16px;
            margin-bottom: 2px;
        }

        /* Style for card content */
        .card-text {
            font-size: 16px;
            color: #000000;
            margin-top: 2px;
            margin-bottom: 16px;
        }


        .circle-button1 {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            border: 2px solid #007bff;
            font-size: 12px;
            font-weight: bold;
            color: #000000;
            background-color: #007bff;
            box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.4);
            
            position: absolute;
            left: 430px;
            top: 0px;
        }

        .circle-button2 {
