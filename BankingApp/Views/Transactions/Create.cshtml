@model BankingApp.Models.Transaction

@{
	ViewData["Title"] = "Create";
}

<div class="text-center">
	<h1 style="color: #026efd;">
		<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-coin" viewBox="0 0 16 16">
			<path d="M5.5 9.511c.076.954.83 1.697 2.182 1.785V12h.6v-.709c1.4-.098 2.218-.846 2.218-1.932 0-.987-.626-1.496-1.745-1.76l-.473-.112V5.57c.6.068.982.396 1.074.85h1.052c-.076-.919-.864-1.638-2.126-1.716V4h-.6v.719c-1.195.117-2.01.836-2.01 1.853 0 .9.606 1.472 1.613 1.707l.397.098v2.034c-.615-.093-1.022-.43-1.114-.9H5.5zm2.177-2.166c-.59-.137-.91-.416-.91-.836 0-.47.345-.822.915-.925v1.76h-.005zm.692 1.193c.717.166 1.048.435 1.048.91 0 .542-.412.914-1.135.982V8.518l.087.02z"/>
			<path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
			<path d="M8 13.5a5.5 5.5 0 1 1 0-11 5.5 5.5 0 0 1 0 11zm0 .5A6 6 0 1 0 8 2a6 6 0 0 0 0 12z"/>
		</svg> Make a payment
	</h1>
</div>
<hr />
<div class="row justify-content-center">
	<div class="col-md-6">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			@if (ViewBag.BankAccounts == null)
			{
				<p>No bank accounts found.</p>
			}
			else
			{
				<div class="form-group">
					<label for="SelectedBankAccountId">Select a Bank Account:</label>
					<select id="SelectedBankAccountId" asp-for="AccountName" class="form-control" asp-items="ViewBag.BankAccounts">
						<option value="">-- Select Bank Account --</option>
					</select>
				</div>
			}
			
			<div class="form-group">
				<label asp-for="Reciver" class="control-label">Sent to</label>
				<input asp-for="Reciver" class="form-control" />
				<span asp-validation-for="Reciver" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Amount" class="control-label"></label>
				<input asp-for="Amount" class="form-control" />
				<span asp-validation-for="Amount" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Date"></label>
				<p>@DateTime.Now.ToString("yyyy-MM-dd")</p>
			</div>

			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
		
		<div class="form-group" style="margin-top: 15px;">
			<a asp-action="Index" class="btn btn-secondary">
				<i class="fas fa-arrow-left"></i> Back to Transactions List
			</a>
		</div>

	</div>
</div>




@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
